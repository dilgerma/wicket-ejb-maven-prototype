<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.md</groupId>
  <artifactId>ear</artifactId>
  <packaging>ear</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>ear</name>
  <dependencies>
    <dependency>
      <groupId>de.md</groupId>
      <artifactId>ejb</artifactId>
      <type>ejb</type>
      <version>1.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>de.md</groupId>
      <artifactId>web</artifactId>
      <type>war</type>
      <version>1.0-SNAPSHOT</version>
    </dependency>
  </dependencies>
  <build>
<plugins>
      <plugin>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
<applicationXml>${artifactId}/src/main/application/META-INF/application.xml</applicationXml>
          <defaultLibBundleDir>lib</defaultLibBundleDir>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
            </manifest>
          </archive>
          <modules>
            <ejbModule>
              <groupId>de.md</groupId>
              <artifactId>ejb</artifactId>
              <bundleFileName>meEjb.jar</bundleFileName>
            </ejbModule>
            <webModule>
              <groupId>de.md</groupId>
              <artifactId>web</artifactId>
              <contextRoot>/me</contextRoot>
              <bundleFileName>meWeb.war</bundleFileName>
            </webModule>
	  </modules>
        </configuration>
      </plugin>
      
    </plugins>
  </build>
</project>
